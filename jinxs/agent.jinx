jinx_name: agent
description: Provides an LLM response with tool use enabled.
inputs:
  - query
steps:
  - name: get_agent_response
    code: |
      response = npc.get_llm_response(
          request=query,
          messages=context.get('messages', []),
          auto_process_tool_calls=True,
          use_core_tools=True
      )
      output = response.get('response', '')
